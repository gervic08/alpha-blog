<h1>Create New Article</h1>

<%= form_with scope: :article, url: articles_path, local: true do |f| %>
<% if @article.errors.any? %>
  <h2>The following errors prevented article to being saved:</h2>
  <ul>
    <% @article.errors.full_message do |msg| %>
      <li> <%= msg %>% </li>
    <% end %>
  </ul>
<% end %>
  <p>
  <%= f.label :title %>
  <%= f.text_field :title %>
  </p>

  <p>
  <%= f.label :description %>
  <%= f.text_area :description %>
  </p>

  <p>
    <%= f.submit%>
  </p>
<% end %>

<%= link_to 'Back', articles_path %>
