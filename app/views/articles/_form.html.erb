<div class="container">
  <%= render 'shared/error', obj: @article %>
  <div class="row mt-4 justify-content-center">
    <div class="col">
      <%= form_with(model: @article, class: "shadow p3 mb-3 bg-info rounded", local: true) do |form| %>
        <div class="form-group row">
          <%=form.label :title, class: "col-2 mt-4 col-form-label text-light text-center" %>
          <div class="col-9">
            <%= form.text_field :title, class: "form-control mt-4 shadow rounded", placeholder: "Title of article"  %>
          </div>
        </div>   
        <div class="form-group row">
          <%=form.label :description, class: "col-2 mt-4 col-form-label text-light text-center" %>
          <div class="col-9">
            <%= form.text_area :description, rows: 10, class: "form-control mt-4 shadow rounded", placeholder: "Description of article"  %>
          </div>
        </div>   
        <div class="form-group row justify-content-center">
          <%= form.submit class: "btn mb-4 btn-outline-light btn-lg" %>
        </div>
      <% end %> 
    </div>
  </div>
</div>
