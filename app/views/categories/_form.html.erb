<div class="container">
  <%= render 'shared/error', obj: @category %>
  <div class="row mt-4 justify-content-center">
    <div class="col">
      <%= form_with(model: @category, class: "shadow p3 mb-3 bg-info rounded", local: true) do |form| %>
        <div class="form-group row">
          <%=form.label :name, class: "col-2 mt-4 col-form-label text-light text-center" %>
          <div class="col-9">
            <%= form.text_field :name, class: "form-control mt-4 shadow rounded", placeholder: "Name of category"  %>
          </div>
        </div>   
        <div class="form-group row justify-content-center">
          <%= form.submit class: "btn mb-4 btn-outline-light btn-lg" %>
        </div>
      <% end %> 
    </div>
  </div>
</div>